import random
secret_number = random.randint(1, 10)  # Генерируем случайное целое число от 1 до 10
attempts = 3  # Определяем количество попыток, которое дается игроку
print("Угадайте число от 1 до 10. У вас 3 попытки.")  # Выводим приветствие и правила игры
for attempt in range(attempts):  # Начинаем цикл, который повторяется три раза (по количеству попыток)
    guess = int(input("Введите число: "))  # Просим игрока ввести число и преобразуем его в целое число
    if guess == secret_number:  # Проверяем, совпадает ли введённое число с загаданным        
      print("Поздравляю! Вы угадали число!")  # Если да, поздравляем игрока и прерываем игру
      break  # Прерывание цикла, так как число угадано    
    else:  # Если числа не совпадают
        print("Неправильно. Попробуйте еще раз.")  # Сообщаем игроку, что попытка неудачная
else:  # Этот блок выполняется только тогда, когда игрок исчерпал все попытки и не угадал число    
  print(f"Вы исчерпали все попытки. Загаданное число было: {secret_number}")  # Сообщаем игроку загаданное число
